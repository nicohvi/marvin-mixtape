%section.forms
  %form#search-form
    = text_field :spotify, :artist, placeholder: "Type in your totes fave artist and press enter"
  
  = form_for @mixtape do |f|
    = f.fields_for :artist do |artist_fields|
      = artist_fields.hidden_field :spotify_id, id: 'spotify_id'
      = artist_fields.hidden_field :name, id: 'artist_name'
    = f.submit t('create_mixtape'), disabled: true

%ul#artists
