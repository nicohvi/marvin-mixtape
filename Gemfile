source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails'
# Use postgresql as the database for Active Record
gem 'pg'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'
# Use jquery as the JavaScript library
gem 'jquery-rails'
# Use haml as our templating engine
gem 'haml'
# Use Passenger as the application server
gem 'passenger'
# Use Omniauth to manage oauth authentication with Spotify
gem 'omniauth'
gem 'omniauth-spotify'
# Use figaro to set heroku environment variables
gem 'figaro'
# Use foreman to simulate heroku environment locally (i.e. Procfile)
gem 'foreman'
# Use rest-client to talk to Spotify
gem 'rest_client'

group :development, :test do
  gem 'spring'
  gem 'priscilla'
  gem 'byebug'
end

group :test do
  gem 'guard'
  gem 'factory_girl_rails'
  gem 'factory_girl', github: 'nicohvi/factory_girl'
  gem 'database_cleaner'
end

